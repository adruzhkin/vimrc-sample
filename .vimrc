" Keep 1000 commands in the history.
set history=1000

" Show cursor position.
set ruler

" Show incomplete commands.
set showcmd

" Show menu when using tab completion.
set wildmenu

" Keep 5 lines above the line with z-Enter.
set scrolloff=5

" Set search options.
set incsearch
set ignorecase
set smartcase

" Set linebreak and indentation.
set lbr
set ai
set si
